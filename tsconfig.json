{
  "include": ["./packages/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "./packages/zdorov-ui/dist"],
  "compilerOptions": {
    "outDir": "./packages/zdorov-ui/dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "declaration": true
  }
}
